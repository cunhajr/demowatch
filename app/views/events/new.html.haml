%h1 Neue Demonstration

- form_for(@event) do |f| 
  = f.error_messages

  = f.label :title, 'Name'
  = f.text_field :title, :size=>60

  = f.label :description, 'Beschreibung' 
  = f.text_area :description, :cols=>60

  = f.label :startdate, 'Begin'
  = datetime_select :event, :startdate 

  /
    = f.text_field :startdate, :size=>20
    #startcal.scal.tinyscal.googleblue
    #scalupdate &nbsp;
    
    :javascript
      var startcal = new scal('startcal', 'event_startdate', {weekdaystart: 1, updateformat:'dd.mm.yyyy'});
  
  = f.label :tag_list, 'Tags'
  = f.text_field :tag_list, :size=>60, :autocomplete => "off"
  #event_tag_list_auto_complete.auto_complete{:style=>'display:none'}

  = f.label :organisation, 'Organisation'
  = select_tag 'event[organisation_id]', options_from_collection_for_select(@organisations, "id", "title")

  = f.hidden_field :user_id

  = f.submit "Erzeugen"

  = link_to 'Zur&uuml;ck zur Liste der Demonstrationen', events_path 

= auto_complete_field 'event_tag_list', {:url => { :action => 'auto_complete_for_tag_name'}, :tokens => [',', ' ']  }
