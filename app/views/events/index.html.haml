- content_for :header do
  = auto_discovery_link_tag :rss, :format => 'rss'

%h1= t(".title")

.contextmenu
  = link_to t(".contextmenu.archive"), archive_events_path
  - if logged_in? 
    |
    = link_to t(".contextmenu.new"), new_event_path
  |
  = link_to t(".contextmenu.map"), "http://maps.google.de/maps?f=q&source=s_q&hl=de&geocode=&q=http://www.demowatch.de/events.rss&g=%2B52%C2%B0+28'+58.22&ie=UTF8&z=7", { :target=>'_new'}
  .rss= link_to image_tag('rss.gif'), :format => 'rss'
  .ical= link_to image_tag('ical.gif'), :format => 'ical'
    
%br
.tabletitle
  = t(".table.title")
%table{:border=>0, :cellspacing=>0, :cellpadding=>0}
  %tr
    %td{:colspan=>@with_distance?4:3}
      .anchor_index
        - @events.each_with_index do |event, index|
          - if index == 0 || event.startdate.to_date.month != @events[index-1].startdate.to_date.month
            = " | " if index > 0 
            = link_to l(event.startdate.to_date,:format=>"%B" + ((event.startdate.to_date.year!=Time.now.year)?" %Y":"") ), events_path + "#" + l(event.startdate.to_date,:format=>"%m-%Y")
  
  %tr
    %th= t(".table.head.startdate")
    %th= t(".table.head.title")
    %th= t(".table.head.city")
    - if( @with_distance)
      %th= t(".table.head.distance")
  - @events.each_with_index do |event, index|
    - if index == 0 || event.startdate.to_date.month != @events[index-1].startdate.to_date.month
      %tr
        %td{:class=> index==0 ? "separator_first" : "separator", :colspan=>@with_distance?4:3}
          %a{:name => l(event.startdate.to_date,:format=>"%m-%Y") }
          = l(event.startdate.to_date,:format=>"%B %Y") 
    %tr{:class => "#{'even' if index.even?} #{'old' if event.startdate <= 6.hours.ago}"}
      - if event.startdate.strftime('%d.%m.%Y') == Time.now.strftime('%d.%m.%Y')
        %td
          .center
            .red= t(".table.rows.today")
      - elsif event.startdate <= Time.now && event.startdate > 6.hours.ago
        %td
          .center
            .red= t(".table.rows.now")
      - else
        %td= event.startdate && l(event.startdate.to_date)
      %td= link_to h( event.title), event
      %td= h( event.city)
      -if @with_distance       
        - if !event.distance.nil?
          %td
            .right= sprintf( "%.0f km", event.distance)  
        - else
          %td
%br
