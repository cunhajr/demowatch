- content_for :header do
  = auto_discovery_link_tag :rss, :format => 'rss'

%h1= t(".title")

.contextmenu
  = link_to t(".contextmenu.current"), events_path
  - if logged_in? 
    |
    = link_to t(".contextmenu.new"), new_event_path
    
%br

.tabletitle
  = t(".table.title")
  .anchor_index
    - @events.reverse.each_with_index do |event, index|
      - if index == 0 || event.startdate.to_date.year != @events[-index].startdate.to_date.year
        = " | " if index > 0 
        = link_to event.startdate.to_date.year, archive_events_path + "#" + String(event.startdate.to_date.year)

%table{:border=>0, :cellspacing=>0, :cellpadding=>0}
  %tr
    %th= t(".table.head.startdate")
    %th= t(".table.head.title")
    %th= t(".table.head.city")
    - if( @with_distance)
      %th= t(".table.head.distance")
  - @events.each_with_index do |event, index|
    - if index == 0 || event.startdate.to_date.year != @events[index-1].startdate.to_date.year
      %tr
        %td{:class=> index==0 ? "separator_first" : "separator", :colspan=>@with_distance?4:3}
          %a{:name => event.startdate.to_date.year}
          = event.startdate.to_date.year
    %tr{:class => "#{'even' if index.even?} #{'old' if event.startdate <= 6.hours.ago}"}
      - if event.startdate.strftime('%d.%m.%Y') == Time.now.strftime('%d.%m.%Y')
        %td
          .center
            .red= t(".table.rows.today")
      - elsif event.startdate <= Time.now && event.startdate > 6.hours.ago
        %td
          .center
            .red= t(".table.rows.now")
      - else
        %td= event.startdate && l(event.startdate.to_date)
      %td= link_to h( event.title), event
      %td= event.city
      -if @with_distance       
        - if !event.distance.nil?
          %td
            .right= sprintf( "%.0f km", event.distance)  
        - else
          %td
