%h1= @user.login

%h2 Daten

%p
  %b Name:
  = @user.login 

%p
  %b Email:
  = @user.email 

%p
  %b Plz:
  = @user.zip 

%h2 Abonnements

%p
  %b Themen:
  - @user.tags.each do |tag|
    = link_to tag.name, :controller => "front", :action => "show", :id => tag.id

%p
  %b Demos & Inititativen:
  %ul
    - @user.bookmarks.each do |bm|
      %li= link_to bm.title, bm.bookmarkable

.contextmenu
  =link_to 'Bearbeiten', edit_user_path(@user)
