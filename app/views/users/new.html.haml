-t_namespace("views.users.new")
%h1= t(".title")
.q= t(".text")
%h2= t(".data.title")

- form_for :user, :url => users_path do |f|
  .indent
    = error_messages_for :user
  
  .indent
    = f.label :login, t(".data.field.login")
    = f.text_field :login 

  .indent
    = f.label :email, t(".data.field.email")
    = f.text_field :email 

  .indent
    = f.label :password, t(".data.field.password")
    = f.password_field :password 

  .indent
    = f.label :password_confirmation, t(".data.field.password_confirmation")
    = f.password_field :password_confirmation 
  
  %h2= t(".options.title")
  .indent= t(".options.text")
  %br
  .indent
    = f.label :zip, t(".options.zip")
    = f.text_field :zip, :size=>5, :value=>@zip_str  

  .buttons
    = submit_tag t(".submit")
